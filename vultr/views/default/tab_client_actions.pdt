            showSection('change_template');
            <?php
            }
            ?>

            $('.options').on('click', 'a.change_template', function(e) {
                var item_class = "change_template";

                hideSections();
                showSection(item_class);
            });

            function hideSections() {
                $('#change_template').hide();
            }

            function showSection(id) {
                $('#' + id).show();
            }
        });
    </script>